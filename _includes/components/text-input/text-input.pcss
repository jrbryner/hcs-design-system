.hcs-text {
  @apply mb-2 mr-4 relative inline-block align-bottom leading-none text-sm;

  .hcs-text__label {
    @apply mb-2 block font-normal font-display cursor-pointer;
  }

  .hcs-text__input {
    @apply
    pl-4 pr-4
    bg-white
    border border-solid border-hcs-gray-t-60 rounded-lg
    transition-all duration-300 ease-in-out;

    min-height: 2rem;

    &:focus {
      @apply outline-none border-hcs-blue;
    }
  }

  textarea.hcs-text__input {
    @apply pt-4 pb-4;
  }
}